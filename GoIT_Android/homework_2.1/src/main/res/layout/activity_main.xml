<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.toma.homework_21.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setupDate"
        android:textSize="@dimen/size1"
        android:textColor="@color/textColor"
        android:id="@+id/head1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textSize="@dimen/size1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/finalData" />

    <TextView
        android:text="@string/month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size1"
        android:id="@+id/month"
        android:layout_below="@+id/head1"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/day"
        android:textSize="@dimen/size1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/day"
        android:layout_below="@+id/month"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="@string/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size1"
        android:id="@+id/year"
        android:layout_below="@+id/day"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <Spinner
        android:layout_width="@dimen/spinnerSize"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerMonth"
        android:layout_alignBottom="@+id/month"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yourDate"
        android:textColor="@color/textColor"
        android:textSize="@dimen/size1"
        android:id="@+id/head2"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/finalData"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="@dimen/spinnerSize"
        android:layout_height="wrap_content"
        android:ems="5"
        android:inputType="numberSigned"
        android:id="@+id/editDay"
        android:layout_alignTop="@+id/day"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="@dimen/spinnerSize"
        android:layout_height="wrap_content"
        android:ems="5"
        android:inputType="numberSigned"
        android:id="@+id/editYear"
        android:layout_alignTop="@+id/year"
        android:layout_alignParentEnd="true" />

</RelativeLayout>