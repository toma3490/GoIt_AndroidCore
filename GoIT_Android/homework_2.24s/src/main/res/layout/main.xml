<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.toma.homework_224s.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll2"
        android:orientation="horizontal"
        android:weightSum="6">

        <EditText
            android:layout_width="@dimen/textSize"
            android:layout_height="match_parent"
            android:id="@+id/editText1"
            android:layout_weight="3"
            android:textAlignment="viewStart"
            android:textSize="@dimen/textSize"
            android:digits="@string/alphabet"
            android:maxLength="10"/>

        <Button
            android:text="@string/to_upper_case"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button1" />

        <TextView
            android:layout_width="@dimen/textSize"
            android:layout_height="match_parent"
            android:id="@+id/string1"
            android:textSize="@dimen/textSize"
            android:layout_weight="2"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll3"
        android:orientation="horizontal"
        android:weightSum="6">

        <EditText
            android:layout_width="@dimen/textSize"
            android:layout_height="match_parent"
            android:id="@+id/editText2"
            android:layout_weight="3"
            android:maxLength="10"
            android:textAlignment="viewStart"
            android:textSize="@dimen/textSize"
            android:digits="@string/alphabet"/>

        <Button
            android:text="@string/to_upper_case"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button2" />

        <TextView
            android:layout_width="@dimen/textSize"
            android:layout_height="match_parent"
            android:id="@+id/string2"
            android:textSize="@dimen/textSize"
            android:layout_weight="2"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll4"
        android:orientation="horizontal"
        android:weightSum="6">

        <EditText
            android:layout_width="@dimen/textSize"
            android:layout_height="match_parent"
            android:id="@+id/editText3"
            android:layout_weight="3"
            android:maxLength="10"
            android:textAlignment="viewStart"
            android:textSize="@dimen/textSize"
            android:digits="@string/alphabet"/>

        <Button
            android:text="@string/to_upper_case"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button3" />

        <TextView
            android:layout_width="@dimen/textSize"
            android:layout_height="match_parent"
            android:id="@+id/string3"
            android:textSize="@dimen/textSize"
            android:layout_weight="2"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll5"
        android:orientation="horizontal"
        android:weightSum="6">

        <EditText
            android:layout_width="@dimen/textSize"
            android:layout_height="match_parent"
            android:id="@+id/editText4"
            android:layout_weight="3"
            android:maxLength="10"
            android:textAlignment="viewStart"
            android:textSize="@dimen/textSize"
            android:digits="@string/alphabet"/>

        <Button
            android:text="@string/to_upper_case"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button4" />

        <TextView
            android:layout_width="@dimen/textSize"
            android:layout_height="match_parent"
            android:id="@+id/string4"
            android:textSize="@dimen/textSize"
            android:layout_weight="2"
            android:textAlignment="center"/>
    </LinearLayout>

</LinearLayout>
